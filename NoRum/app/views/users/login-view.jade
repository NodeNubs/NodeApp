extends ../layout
block content
  h1 Login
  div(class="row")
    div(class="col-md-6 col-md-offset-3")
      form(class="form-horizontal" name="registerForm" action="/login" method="post")
        fieldset
          legend Login
          div(class="form-group")
            label(for="username" class="col-lg-2 control-label") User Name
            div(class="col-lg-10")
              input(type="text" name="username" class="form-control" id="username" required="required" placeholder="User Name")
          div(class="form-group")
            label(for="password" class="col-lg-2 control-label") Password
            div(class="col-lg-10")
              input(type="password" name="password" class="form-control" id="password" required="required" placeholder="Password")
          div(class="form-group")
            div(class="col-lg-10 col-lg-offset-2")
              input(type="submit" class="btn btn-primary" value="Login")
