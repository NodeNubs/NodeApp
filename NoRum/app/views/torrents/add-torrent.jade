extends ../layout
block content
  div(class="row")
    div(class="col-md-6 col-md-offset-3")
      form(name="addTorrentForm" method="post" action='/addTorrent' enctype="multipart/form-data")
        fieldset
          legend Add Torrent
          div(class="form-group")
            label(for="name" class="col-lg-2 control-label") Name
            div(class="col-lg-10")
              input(type="text" name="name" class="form-control" id="name" required="required" placeholder="Name")
            label(for="description" class="col-lg-2 control-label") Description
            div(class="col-lg-10")
              input(type="text" name="description" class="form-control" id="description" required="required" placeholder="Description")
            label(for="file" class="col-lg-2 control-label") File
            div(class="col-lg-10")
              input(type="file" name="file" class="form-control" id="file" required="required")
            label(for="category" class="col-lg-2 control-label") Category
            div(class="col-lg-10")
              select(id="category" name="category")
                option(value="movie") Movie
                option(value="music") Music
                option(value="game") Game
                option(value="other") Other
            div(class="col-lg-10 col-lg-offset-2")
              input(type="submit" class="btn btn-primary" value="Submit")
